{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle catégorie{% endblock %}

{% block body %}
    <div class="d-flex">
        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="fw-bold text-danger">Créer une nouvelle catégorie</h1>
                <a href="{{ path('app_product_index') }}" class="btn btn-dark rounded-pill px-4 py-2">Retour au Dashboard</a>
            </div>

            <div class="card shadow border-0 p-4">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="form-group mb-4">
                    {{ form_label(form.name, 'Nom de la catégorie', {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control border border-danger'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group mb-4">
                    {{ form_label(form.image, 'Image de la catégorie', {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control border border-danger'}}) }}
                    {{ form_errors(form.image) }}
                </div>
                <button type="submit" class="btn btn-danger rounded-pill px-5 py-2">Enregistrer</button>
                {{ form_end(form) }}
            </div>

            <a href="{{ path('app_category_index') }}" class="btn btn-outline-danger mt-4 rounded-pill px-4 py-2">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
