{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle sous-catégorie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-danger">Créer une nouvelle sous-catégorie</h1>
            <a href="{{ path('app_product_index') }}" class="btn btn-dark rounded-pill px-4">Retour au Dashboard</a>
        </div>
        <div class="bg-light p-5 rounded-3 shadow">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="form-group mb-4">
                {{ form_label(form.name, 'Nom de la sous-catégorie', {'label_attr': {'class': 'form-label fw-bold text-danger'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control border-danger'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="form-group mb-4">
                {{ form_label(form.category, 'Catégorie parent', {'label_attr': {'class': 'form-label fw-bold text-danger'}}) }}
                {{ form_widget(form.category, {'attr': {'class': 'form-control border-danger'}}) }}
                {{ form_errors(form.category) }}
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger rounded-pill px-5">Enregistrer</button>
                <a href="{{ path('app_category_index') }}" class="btn btn-secondary rounded-pill px-5">Retour à la liste</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
